<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerHeading"
        android:text="Creat Your Account Hear!"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerName"
        android:text="Name : "
        android:textSize="20sp"
        android:layout_marginTop="20dp"

        android:textColor="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/registerHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/registerNameText"
        />
    <EditText
        android:id="@+id/registerNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/registerHeading"
        app:layout_constraintStart_toEndOf="@id/registerName"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerEmail"
        android:text="Email : "
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/registerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/registerEmailText"
        />

    <EditText
        android:id="@+id/registerEmailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toEndOf="@id/registerEmail"
        app:layout_constraintTop_toBottomOf="@id/registerNameText"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerPassword"
        android:text="Password : "
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/registerEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/registerPasswordText"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerPasswordText"
        android:hint="@string/password"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@id/registerPassword"
        app:layout_constraintTop_toBottomOf="@id/registerEmailText"
        app:layout_constraintEnd_toEndOf="parent"
        />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/registerButton"
          android:layout_marginTop="20dp"
          android:text="Register"
          android:textColor="@color/black"
          android:background="@color/purple_200"
          app:layout_constraintTop_toBottomOf="@id/registerPasswordText"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerNameTextPrint"
        app:layout_constraintTop_toBottomOf="@id/registerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerEmailTextPrint"
        app:layout_constraintTop_toBottomOf="@id/registerNameTextPrint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerPasswordTextPrint"
        app:layout_constraintTop_toBottomOf="@id/registerEmailTextPrint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>